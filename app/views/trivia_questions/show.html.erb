<h1>Question <b>1</b> of <b>10</b></h1>
<h2>Trivia question, <%= @artist%></h2>


<object id="youtube" width="560" height="315">
	<param name="movie" value=<%= @youtube_src%> ></param>
	<param name="allowFullScreen" value="true"></param><param name="allowscriptaccess" value="always"></param>
	<embed src=<%= @youtube_src%>  type="application/x-shockwave-flash" width="560" height="315" allowscriptaccess="always" allowfullscreen="true"></embed>
</object>
<br />
<div id="questionspan">
	<h2 id="display_question"><%= @question%></h2>
	<%= form_tag('/question_result') do %>
		<%= text_field_tag 'answer', nil, :placeholder=>'My answer'	%>
		<br />
		<%= submit_tag 'Submit answer!'%>
	<% end %>
	<%=
	  	button_tag(:type => 'fail_submit') do
  			content_tag(:strong, 'I have no clue!')
  		end
	%>
</div>
<br />
	